<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HorsesForCourses.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HorsesForCourses.MVC.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HorsesForCourses.MVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item"></li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="CoachMVC"
                            asp-action="Index">Coaches</a>
                        </li>
                        <li class="nav-item"></li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="CourseMVC"
                            asp-action="Index">Courses</a>
                        </li>
                        <li class="nav-item"></li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="CoachMVC"
                            asp-action="CreateCoachForm">Create a coach</a>
                        </li>
                        <li class="nav-item"></li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="CourseMVC"
                            asp-action="CreateCourseForm">Create a
                            course</a>
                        </li>
                        <li class="nav-item"></li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account"
                            asp-action="Register">Register a user</a>
                        </li>
                    </ul>
                    <div align="center">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <p style="margin:0; padding:0;">@User.Identity.Name</p>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-link">Logout</button>
                            </form>
                            <form asp-controller="Account" asp-action="RemoveUser" method="post" class="d-inline">
                                <input type="hidden" name="email" value="@User.Identity.Name" />
                                <button type="submit" class="btn btn-link">Delete my account</button>
                            </form>
                            <form asp-controller="Account" asp-action="DownloadUserData" method="post" class="d-inline">
                                <input type="hidden" name="email" value="@User.Identity.Name" />
                                <button type="submit" class="btn btn-link">Download my account data</button>
                            </form>
                        }
                        else
                        {
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - HorsesForCourses.MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
